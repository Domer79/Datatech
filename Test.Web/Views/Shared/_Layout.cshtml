@using System.Web.Optimization

@functions {
    private string GetContainerClass(bool containerFluid)
    {
        return containerFluid ? "container-fluid" : "container";
    }
}

@{
    Layout = null;
    var containerFluid = ViewBag.ContainerFluid ?? false;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/scripts/jquery")
    @Scripts.Render("~/scripts/jqueryui")
    @Scripts.Render("~/scripts/bootstrap")
    @Scripts.Render("~/scripts/service")
    @Styles.Render("~/bootstrap/css")
    @Styles.Render("~/content/jquery/ui")
    @Styles.Render("~/Content/themes/black-tie")

    <style type="text/css">
        .downloadModalBase {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            /*background-color: #000;
                background-color: rgba(0,0,0,0.0);*/
            z-index: 1100;
        }

        .downloadbar {
            position: relative;
            width: 300px;
            height: 30px;
            top: 50%;
            left: 50%;
            margin-left: -150px;
            margin-top: -15px;
        }

        .ui-progressbar {
            position: relative;
        }
    </style>

</head>
<body>
<div class="@GetContainerClass(containerFluid)">
    @RenderBody()
</div>

<div id="globalHidden" class="hidden">
    <div class="downloadModalBase">
        <div id="progressbar" class="downloadbar">
            <div style="position: absolute; left: 50%; top: 4px; font-weight: bold; text-shadow: 1px 1px 0 #fff; margin-left: -40px; z-index: 1101;">
                Загрузка...
            </div>
        </div>
    </div>
</div>

<div id="messageDialog" class="modal fade in">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 id="messageDialogTitle" class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <h4>
                        <span id="messageDialogText" class="text-danger">
                            dsfsadfsf
                        </span>
                    </h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
